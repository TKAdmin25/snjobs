---
import SectionFooter from "../components/section/SectionFooter/SectionFooter.astro";
import SectionNav from "../components/section/SectionNav.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
}

const {
  title = "ServiceNow Jobs & Careers",
  description = "Find the latest ServiceNow jobs, careers, and remote opportunities worldwide. Apply to full-time, part-time, and contract roles in the ServiceNow ecosystem.",
  keywords = "ServiceNow jobs, ServiceNow careers, ServiceNow developer jobs, ServiceNow administrator jobs, remote ServiceNow jobs"
} = Astro.props;

const url = Astro.url;
const siteName = "SNJobs";
const defaultImage = "/snjobs.ico";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>

    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="SNJobs" />
    <meta name="robots" content="index,follow" />
    <link rel="canonical" href={url.href} />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url.href} />
    <meta property="og:image" content={defaultImage} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={defaultImage} />
    <meta name="twitter:image:alt" content="SNJobs logo" />

    <link rel="icon" type="image/svg+xml" href={defaultImage} />
    <link rel="apple-touch-icon" href={defaultImage} />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <SectionNav />
    <slot />
    <SectionFooter />
  </body>
</html>
